<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.longynuss.guess.SingleRoomPlaying">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/inputNumSingle_Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:allowUndo="true"
            android:ems="10"
            android:inputType="phone"
            android:digits="-.0123456789"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:id="@+id/button00"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="0" />

            <Button
                android:id="@+id/button01"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="1" />

            <Button
                android:id="@+id/button02"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@+id/button04"
                android:layout_toRightOf="@+id/button04"
                android:text="2" />

            <Button
                android:id="@+id/button03"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:text="3" />

            <Button
                android:id="@+id/button04"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@+id/button03"
                android:layout_toRightOf="@+id/button03"
                android:text="4" />

            <Button
                android:id="@+id/button05"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_toLeftOf="@+id/button06"
                android:layout_toStartOf="@+id/button06"
                android:text="5" />

            <Button
                android:id="@+id/button06"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_toLeftOf="@+id/button07"
                android:layout_toStartOf="@+id/button07"
                android:text="6" />

            <Button
                android:id="@+id/button07"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_toLeftOf="@+id/button08"
                android:layout_toStartOf="@+id/button08"
                android:text="7" />


            <Button
                android:id="@+id/button08"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_toLeftOf="@+id/button09"
                android:layout_toStartOf="@+id/button09"
                android:text="8" />

            <Button
                android:id="@+id/button09"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_marginEnd="31dp"
                android:layout_marginRight="31dp"
                android:layout_toLeftOf="@+id/button01"
                android:layout_toStartOf="@+id/button01"
                android:text="9" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

        <ListView
            android:id="@+id/ListOfGuesses"
            android:layout_width="match_parent"
            android:layout_height="320dp"


            />

        <Button
            android:id="@+id/buttonGuess_Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonGuessClicked"
            android:text="Guess"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="261dp" />

        <TextView
            android:id="@+id/testeNumeroAleatorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />


        ]
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
